{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5033
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "functions": {
      "port": 7007
    }
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs14",
    "endpoints": {
      "getPlaces": {
        "entryPoint": "getPlaces",
        "concurrency": 80,
        "memory": "512MB",
        "cpu": "2",
        "vpcConnector": "default",
        "minInstances": 1,
        "maxInstances": 5,
        "region": "us-central1"
      }
    }
  },
  "ignore": [
    "node_modules",
    ".git",
    "firebase-debug.log",
    "firebase-debug.*.log",
    "*.local"
  ]
}
